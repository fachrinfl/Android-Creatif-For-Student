<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:colorError">@color/colorError</item>
        <item name="colorControlActivated">@android:color/white</item>

    </style>

    <style name="FormLoginTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgressBarTheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#1BFFFF</item>
        <item name="android:progressBackgroundTint">@color/colorBackgroundProgress</item>
        <item name="colorControlActivated">@color/colorMainProgress</item>
        <item name="colorControlHighlight">@color/colorSecondProgress</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
    </style>

    <style name="IndicatorTheme">
        <item name="android:progressBackgroundTint">@color/colorBackgroundProgress</item>
        <item name="colorControlActivated">@color/colorMainProgress</item>
        <item name="colorControlHighlight">@color/colorSecondProgress</item>
    </style>

</resources>
